create table users(
	Username varchar(30) Primary Key,
	Firstname varchar(20),
	Lastname varchar(20),
	Password varchar(20) NOT NULL
);

insert into users values("dsarov", "Dumitru", "Sarov", "password");

create table events(
	EventId int(4) Primary Key,
	Title varchar(40) NOT NULL,
	Description varchar(100),
	LocationInfo varchar(40),
	Date date,
	Participants int(2),
	Username_FK varchar(30),
	Foreign Key (Username_FK) references users(Username)
);

insert into events values(1, "blin", "cook blin", "blin day", '2020-01-01', 2, "dsarov");

create table comments(
	Commentid int(9),
	Username_FK varchar(30),
	Comment varchar(400),
	Date date,
	EventsId_FK int(4),
	Foreign Key (EventsId_FK) references events(EventId),
	Foreign Key (Username_FK) references users(Username)	
);

insert into comments values(2, "dsarov", "This is a test comment number 3", curdate(), 1);

select * from events inner join comments on events.eventid = comments.eventsid_fk;
